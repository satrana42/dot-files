# i3 config file (v4)

# modifier key
set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Noto Sans Mono 8

# no title bar in split mode
new_window 1pixel

# use these keys for focus, movement, and resize directions when reaching for
# the arrows is not convenient
set $up k
set $down j
set $left h
set $right l

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+Shift+backslash split h

# split in vertical orientation
bindsym $mod+Shift+minus split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle container layout (stacked, tabbed, split)
bindsym $mod+t layout toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# make window sticky
bindsym $mod+Shift+s sticky toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+s focus child

# move the currently focused window to the scratchpad
# bindsym $mod+Shift+plus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
# bindsym $mod+plus scratchpad show

# switch to workspace
set $ws_main "1: main"
set $ws_term "2: term"
set $ws_web "3: web"
set $ws_aux "4: aux"
bindsym $mod+1 workspace $ws_main
bindsym $mod+2 workspace $ws_term
bindsym $mod+3 workspace $ws_web
bindsym $mod+4 workspace $ws_aux
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws_main
bindsym $mod+Shift+2 move container to workspace $ws_term
bindsym $mod+Shift+3 move container to workspace $ws_web
bindsym $mod+Shift+4 move container to workspace $ws_aux
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# binding modes
# i3 session management
set $mode_i3_session "i3 session: inplace [r]estart, reload [c]onfig"
mode $mode_i3_session {
        # reload the configuration file
        bindsym c reload
        # restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
        bindsym r restart

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+grave mode $mode_i3_session

# system session management
set $mode_system_session "system session: [e]xit, [l]ock, [r]eboot, [s]hutdown"
mode $mode_system_session {
        # exit i3 (logs you out of your X session)
        bindsym e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"; mode "default"
        # lock gnome 
        bindsym l exec i3lock; mode "default"
        # restart
        bindsym r exec "i3-nagbar -t warning -m 'You pressed the reboot shortcut. Do you really want to reboot the system? This will end all running processes.' -b 'Yes, reboot' 'systemctl reboot'"; mode "default"
        # shutdown
        bindsym s exec "i3-nagbar -t warning -m 'You pressed the shutdown shortcut. Do you really want to shutdown the system? This will end all running processes.' -b 'Yes, shutdown' 'systemctl poweroff'"; mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+Escape mode $mode_system_session

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $left       resize shrink width 10 px or 10 ppt
        bindsym $down       resize grow height 10 px or 10 ppt
        bindsym $up         resize shrink height 10 px or 10 ppt
        bindsym $right      resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left        resize shrink width 10 px or 10 ppt
        bindsym Down        resize grow height 10 px or 10 ppt
        bindsym Up          resize shrink height 10 px or 10 ppt
        bindsym Right       resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# mouse configuration
# foces doesn't follow mouse
focus_follows_mouse no

# start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
        position top
        separator_symbol " / "
}

# start up apps
# enable natural scrolling
exec ~/codes/i3-natural-scrolling-and-tap/inverse-scroll.sh

# enable tap to click
exec ~/codes/i3-natural-scrolling-and-tap/tap-to-click.sh 

# set wallpaper
exec sh ~/.fehbg

# start cerebro
exec --no-startup-id cerebro

# start redshift
exec --no-startup-id redshift

# start network manager applet
exec --no-startup-id nm-applet

# start volumeicon applet
exec --no-startup-id volumeicon

# start compton
exec compton
